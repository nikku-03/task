{
  "name": "task",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.15.7",
    "@sap-cloud-sdk/connectivity": "^4",
    "@sap-cloud-sdk/http-client": "^4",
    "@sap-cloud-sdk/resilience": "^4",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "axios": "^1.13.2",
    "express": "^4",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-orders": "cds watch --open orders/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy task --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "auth": {
        "kind": "basic",
        "users": {
          "ruthwik@gmail.com": {
            "password": "R@123",
            "roles": [
              "Admin"
            ]
          },
          "pranav@gmail.com": {
            "password": "P@123",
            "roles": [
              "Viewer"
            ]
          }
        }
      },
      "Products": {
        "kind": "odata-v2",
        "model": "srv/external/Products",
        "[production]": {
          "credentials": {
            "destination": "Products"
          }
        },
        "csrf": true,
        "csrfInBatch": true
      },
      "Northwind": {
        "kind": "odata",
        "model": "srv/northwind.cds",
        "credentials": {
          "url": "https://services.odata.org/V4/Northwind/Northwind.svc/"
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/orders"
  ]
}
